{
  "manifest_version": 2,

  "name": "Annotator",
  "description": "Live annotations",
  "version": "1.0",

  "page_action": {
    "default_title": "Annotator",
    "default_icon": "media/icon.png",
    "default_popup": "src/popup.html"
  },

  "background": {
    "scripts": ["src/background/eventPage.js"],
    "persistent": false
  },

  "permissions": [
    "declarativeContent",
    "storage"
  ]
}